@{
    ViewBag.Title = "Portal de Comprobantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row" style="margin-top: 5px;">
    </div>
    <div class="row" style="margin-top: 5px;">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="ID_PAGO" class="control-label col-sm-12">ID PAGO :</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="ID_PAGO" required>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-sm-4">

                        </div>
                        <div class="col-sm-8">
                            <button type="button" onclick="Pagos();" ID="ACTUALIZAR" name="ACTUALIZAR" value="ACTUALIZAR" Class="btn btn-success btn-block btn-sm" ToolTip="BUSCAR PAGO">
                            <i class="glyphicon glyphicon-refresh"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-sm-4">

                        </div>
                        <div class="col-sm-8">
                            <button type="button" onclick="Print();" ID="IMPRIMIR" name="IMPRIMIR" value="IMPRIMIR" Class="btn btn-warning btn-block btn-sm" ToolTip="IMPRIMIR PAGO">
                                <i class="glyphicon glyphicon-file"></i>
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>


@section scripts{
    <script type="text/javascript">

        function Pagos() {
           var Id = document.getElementById('ID_PAGO').value;
            Url = "@Url.Content("~/Default/Pagos")" + "/?ID_PAGO=" + Id;
            console.log(Url);
            window.open(Url);
        }



        function Print() {
           var Id = document.getElementById('ID_PAGO').value;
            Url = "@Url.Content("~/Default/Print")" + "/?ID_PAGO=" + Id;
            console.log(Url);
            window.open(Url);
        }






    </script>
}